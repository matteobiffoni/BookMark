<div class="full_page">
  <h1>Utente</h1>
  <% if Book.count > 0 %>
    <%= link_to 'Ricerca un libro', books_search_path, class: "btn btn-primary", id: "book_search"%>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Ruolo</th>
          <th>Ufficio</th>
          <th>Descrizione</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.user_role %></td>
            <td><%= user.head_office %></td>
            <td><%= truncate(user.bio, length: 300) %></td>
            <td><%= link_to 'Mostra', user, id: "user_button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h2>Non sono presenti user al momento!</h2>
  <% end %>
</div>
