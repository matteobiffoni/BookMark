<!DOCTYPE html>
<html>
  <head>
    <title>BookMark</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'shared/shim' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <%= link_to "BookMark", root_path, id: "logo" %>
          <% if current_user %>
            <div class="dropdown pull-right right-nav inline-divs">
              <% if (!current_user.provider || current_user.provider.empty?) && (!current_user.uid || current_user.uid.empty?) %>
                <div class="inline-divs">
                  <%= link_to 'Collega a Facebook', user_facebook_omniauth_authorize_path, class: "btn btn-primary" %>
                </div>
              <% end %>
              <div class="inline-divs">
                <%= form_tag(users_path, method: :get) do%>
                  <%= text_field_tag :user, nil, placeholder: 'Lettori, Scrittori, Case Editrici', id: "research_users_input"%>
                  <%= submit_tag 'Cerca', class: "btn btn-primary"  %>
                <% end %>
              </div>
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="background-color: transparent; color: #fff; margin-left: 150px;">
                <%= current_user.name.upcase %>
                <span class="caret"/>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Visualizza profilo", current_user %></li>
                <li><%= link_to "Modifica account", edit_user_registration_path %></li>
                <li><%= link_to "Esci", destroy_user_session_path, :method => :delete %></li>
              </ul>
            </div>
          <% end %>
        </nav>
      </div>
    </header>
    <%= render 'shared/flashmessages' %>
    <%= yield %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
