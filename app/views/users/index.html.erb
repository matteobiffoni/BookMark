<div class="full_page">
  <h1>Risultati della ricerca</h1>
  <% if Book.count > 0 %>
    <%= link_to 'Ricerca un libro', books_search_path, class: "btn btn-primary", id: "book_search"%>
  <% end %>
  <% if @user && @user.length > 0 %>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Ruolo</th>
          <th>Sede</th>
          <th>Bio</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.user_role %></td>
            <% if user.head_office && !user.head_office.empty? %>
              <td><%= user.head_office %></td>
            <% else %>
              <td>/</td>
            <% end %>
            <% if user.bio && !user.bio.empty? %>
              <td><%= truncate(user.bio, length: 50) %></td>
            <% else %>
              <td>/</td>
            <% end %>
            <td><%= link_to 'Mostra', user, id: "user_button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h2>Non Ã¨ stato trovato nessun utente corrispondente ai criteri di ricerca</h2>
  <% end %>
</div>
